      button#create-finish.box-finish  Finished
      button#create-cancel  Cancel
  // adding players
  #addPlayers.transition-box
    .player-form
      .player-box
        label New Player
        br
        input(type='text', name='add', placeholder='Players Name')
        .radio-display
          label(for='in')  In
          input(type='radio', name='player-add-status', value='in', checked='checked')
          label(for='out')  Out
          input(type='radio', name='player-add-status', value='out')
        br
        br
        .radio-display
          label.gender(for='male') male
          input.gender(type='radio', name='player-add-gender', value='male')
          label.gender(for='female') female
          input.gender(type='radio', name='player-add-gender', value='female')
        br
        br
      button#add-finish.box-finish  Finished
      button#add-cancel  Cancel
  // Removing Players
  #removePlayer.transition-box
    .player-form
      .player-box
        label Remove Player
        br
        input(type='text', name='remove', placeholder='Players Name')
        br
        br
    button#remove-finish.box-finish  Finished
    button#remove-cancel  Cancel
  // manage Roaster Box
  .container
    #manageRoaster
      h3 Roaster Manage
      .player-form
        #manage-roaster
          .row
            .col-xs-4.in
              h4  In
            .col-xs-4.manageButtons
              h4  Manage
              div
            .col-xs-4.manage-out
              h4  Out
          button#manage-finish.box-finish  Finished
          button#manage-cancel  Cancel
  // change player box
  #change-box
    h3 Change player
    .player-form
      #change
        select#changePlayer(name='change-player')
  // Settings
  .container
    #Settings-box.transition-box
      .player-form
        h3 Settings
        .row
          .col-xs-4
            p Rotate by gender
            br
            p Roation spot
          .col-xs-8
            .radio-display
              label(for='off') no
              input(type='radio', name='gender-matter', value='off', checked='checked')
              label(for='on') yes
              input(type='radio', name='gender-matter', value='on')
            br
            .radio-display
              label(for='front-row') To Front
              input(type='radio', name='rotation', value='front')
              label(for='back-row') To Back
              input(type='radio', name='rotation', value='back')
              label(for='after-serve') After Serve
              input(type='radio', name='rotation', value='serve', checked='checked')
        br
        button#settings-finish.box-finish Finish
        button#settings-cancel Cancel
  // Edit Player
  #edit-player
    h3 Edit player
    .player-form
      select#edit-choose
      br
      br
      input(type='text', name='edit-player-name')
      br
      br
      .radio-display
        label.gender(for='male') male
        input.gender(type='radio', name='player-edit-gender', value='male')
        label.gender(for='female') female
        input.gender(type='radio', name='player-edit-gender', value='female')
      br
      br
      .radio-display
        label(for='in')  In
        input(type='radio', name='player-edit-status', value='in')
        label(for='out')  Out
        input(type='radio', name='player-edit-status', value='out')
