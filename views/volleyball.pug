doctype html
head
  meta(charset='utf-8')
  title Volleyball Tracker
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  link(rel='stylesheet', type='text/css', href='/styles/volleyball.css')
  link(rel='stylesheet', type='text/css', href='/styles/project-nav.css')
body
  include ./project-nav.pug
  h1#title  Volleyball Tracker
  #nav
    ul
      li.nav-bar
        a#create(href='#') Create Team
      li.nav-bar
        a#add(href='#') Add Player
      li.nav-bar
        a#remove(href='#') Remove Player
      li.nav-bar
        a#manage(href='#') Manage Roaster
      li.nav-bar
        a#edit(href='#') Edit Player
      li.nav-bar
        a#setting(href='#') Settings
  // Volleyball Court
  .container-fluid
    .court
      .row
        .col-md-2
        .inside-court.col-md-7
          #ten-line
          .row
            .col-xs-4.right-side
              .top-row.zone
                p#spot3.player.front-left spot3
              .bottom-row.zone
                p#spot2.player.back-left spot2
            .col-xs-4.center-side
              .top-row.zone
                p#spot4.player.front-middle spot4
              .bottom-row.zone
                p#spot1.player.back-middle spot1
            .col-xs-4.left-side
              .top-row.zone
                p#spot5.player.front-right spot5
              .bottom-row.zone
                p#spot6.player.back-right spot6
        .col-md-3
          .out
            ol(reversed='')
              li#spot7 out 4
              li#spot8 out 3
              li#spot9 out 2
              li#spot10 out 1
            button#reverse.btn.something  Reverse one
            button#forward.btn  Forward one
            select#amount(name='amountPlayers')
              option(value='6') Six
              option(value='7') Seven
              option(value='8') Eight
              option(value='9') Nine
              option(value='10') Ten
  // Creating Team Box
  .container-fluid
    #teamBox.transition-box
      h3 Create Team
      #teamCreate
        // Radio Buttons
        .radio-box
          label(for='6') Six
          input(type='radio', name='playerNumber', value='6', checked='checked')
        .radio-box
          label(for='7') Seven
          input(type='radio', name='playerNumber', value='7')
        .radio-box
          label(for='8') Eight
          input(type='radio', name='playerNumber', value='8')
        .radio-box
          label(for='9') Nine
          input(type='radio', name='playerNumber', value='9')
        .radio-box
          label(for='10') Ten
          input(type='radio', name='playerNumber', value='10')
        // Players
        #box1.player-form
          .row
            .player-box
              label Player 1
              br
              input(type='text', name='player1', placeholder='Players Name')
              .radio-display
                label(for='in')  In
                input(type='radio', name='player1-status', value='in', checked='checked')
                label(for='out')  Out
                input(type='radio', name='player1-status', value='out')
              .radio-display
                label.gender(for='male')  Male
                input.gender(type='radio', name='player1-gender', value='male', checked='checked')
                label.gender(for='female')  Female
                input.gender(type='radio', name='player1-gender', value='female')
