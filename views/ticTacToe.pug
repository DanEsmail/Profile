doctype html
head
  meta(charset='utf-8')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  link(rel='stylesheet', type='text/css', href='/styles/tictactoe.css')
  link(rel='stylesheet', type='text/css', href='/styles/project-nav.css')
  title Tic-Tac-Toe
body
  include ./project-nav.pug
  .container-fluid.board
    .row
      .col-xs-2
      .col-xs-8
        h1.font  Tic-Tac-Toe
        br
        br
        .score-board
          p.player-score.font Player 1: 0
          p.computer-score.font Computer: 0
          p.cats-score.font Cats Game: 0
          br
          br
          button#settings settings
        br
        br
        .game-board
          .small-grid
            #box1.top-row.zone
              p.spot
            #box2.zone
              p.spot
            #box3.zone
              p.spot
          .small-grid
            #box4.zone
              p.spot
            #box5.zone
              p.spot
            #box6.zone
              p.spot
          .small-grid
            #box7.zone
              p.spot
            #box8.zone
              p.spot
            #box9.zone
              p.spot
        #choose
          br
          h3 What do you want to play
          br
          button#play-o.button-active Play As O's
          button#play-x.button-deactive Play As X's
          br
          h3.top-border How many players
          br
          button#one-player.button-active One Player
          button#two-player.button-deactive Two Players
          br
          br
          br
          br
          .top-border
            div
              button#close(type='button') Close
          .col-xs-2
      script(src='https://code.jquery.com/jquery-1.11.2.min.js')
      script(src='/scripts/tictactoe.js')
